@page
@model IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Home page";

}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>HTML</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClienteWeb.styles.css" asp-append-version="true" />
</head>

<body class="container  ">

    <h1 class="display-4 text-center mb-5">Tursimo SV</h1>

    <div class="row d-flex justify-content-center mt-5">
        <h2 class="text-center">Login</h2>
        <div class="col-5">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="usuario" class="form-label">Usuario</label>
                    <input asp-for="usuario" type="text" class="form-control" placeholder="Usuario">
                    <span asp-validation-for="usuario"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="contra" class="form-label">Contraseña</label>
                    <input asp-for="contra" type="password" class="form-control" aria-labelledby="passwordHelpBlock">
                    <span asp-validation-for="contra"></span>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Login</button>
                </div>
            </form>
        </div>
    </div>
    


    <p>@Model.texto</p>














    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>